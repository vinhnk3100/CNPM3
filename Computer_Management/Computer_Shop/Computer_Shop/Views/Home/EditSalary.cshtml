@model Computer_Shop.Models.Account
@{
    ViewBag.Title = "EditSalary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .col-md-12 {
        text-align: center
    }
</style>

@using (Html.BeginForm("EditSalary", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <h4 style="font-size:45px">Account Infomation</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.UserID)

    <strong class="form-group" style="font-size:35px">
        @Html.LabelFor(model => model.Salary, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4" style="font-size:36px;font-family:'Times New Roman'">
            <input class="form-control text-box single-line" id="Salary" name="Salary" type="text" value="@Html.ValueFor(m=>m.Salary) $" style="font-size:24px">
            @Html.ValidationMessageFor(model => model.Salary, "", new { @class = "text-danger" })
        </div>
    </strong>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>

    <br />

</div>
}